# Contabo API Configuration
# Copy this file to .envrc and add your actual API credentials
# Get credentials from: https://my.contabo.com/api/details
# Then run: direnv allow

# Contabo OAuth2 Authentication (all 4 required)
export CONTABO_CLIENT_ID="your_client_id_here"
export CONTABO_CLIENT_SECRET="your_client_secret_here"
export CONTABO_API_USER="your.email@example.com"
export CONTABO_API_PASSWORD="your_api_password_here"

# Pass to Terraform
export TF_VAR_contabo_client_id="${CONTABO_CLIENT_ID}"
export TF_VAR_contabo_client_secret="${CONTABO_CLIENT_SECRET}"
export TF_VAR_contabo_api_user="${CONTABO_API_USER}"
export TF_VAR_contabo_api_password="${CONTABO_API_PASSWORD}"

# Optional: Change region (default: EU = Frankfurt)
# Available: EU, US-central, US-east, US-west, SIN, UK, AUS, JPN, IND
# export TF_VAR_region="EU"

# Optional: Change environment (default: prod)
# export TF_VAR_environment="prod"

# Optional: Change billing period (default: 1 = monthly)
# Options: 1, 3, 6, or 12 months
# export TF_VAR_period=1

# Optional: Use different product plan (default: V97 = VPS 30 NVMe)
# V91 = VPS 10 NVMe (4 vCPU, 8GB RAM, 75GB) - €6/month
# V97 = VPS 30 NVMe (8 vCPU, 24GB RAM, 200GB) - €11.20/month [RECOMMENDED]
# V100 = VPS 40 NVMe (10 vCPU, 30GB RAM, 250GB) - €17/month
# export TF_VAR_instance_plan="V97"

# Note: SSH keys for Contabo must be created via the Secrets Management API
# If you want to use SSH key authentication instead of password:
# 1. Create SSH key secret via Contabo API or control panel
# 2. Get the secretId
# 3. Uncomment and set:
# export TF_VAR_ssh_key_secret_id=12345
